

@model JustClick.Models.ViewModels.CreditCardTypeVM

@{

    //Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Credit Card Type";
}




<div class="row">
    <div class="col">
        <div class="card shadow">
            <form method="post">

                @*<div class="row p-3 border">*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.CreditCardType.CARDCODE != 0)
                {
                    title = "Edit Credit Card Type ";
                    <input type="hidden" asp-for="CreditCardType.CARDCODE" />
                }
                <div class="card-header border-0">
                    <br />
                    <div class="row">
                        <div class="col-12 border-bottom">
                            <h2 class="text-primary">@title</h2>
                        </div>
                    </div>
                </div>
                <div class="col-8 pt-4">

                    <div class="form-group row">
                        <div class="col-4">
                            Project Code
                        </div>
                        <div class="col-8">
                            @Html.DropDownListFor(m => m.CreditCardType.PROJECT_CODE, Model.PROJECT_CODE_LIST, "-Select a Project Code",
                           new { @class = "form-control" })
                            <span asp-validation-for="CreditCardType.PROJECT_CODE" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="CreditCardType.CARDTYPE"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="CreditCardType.CARDTYPE" class=" form-control"    />
                            <span asp-validation-for="CreditCardType.CARDTYPE" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>




                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            @if (Model.CreditCardType.CARDCODE != 0)
                            {


                                <partial name="_EditAndBackToListButton" model="Model.CreditCardType.CARDCODE" />
                            }
                            else
                            {
                                <partial name="_CreateAndBackToListButton" />
                            }
                        </div>
                    </div>
                </div>
                @*</div>*@



                @if (@ViewBag.Message != null)
                {
                    <script type="text/javascript">

                        window.onload = function () {

                                    swal({
                                        title: "Warning",
                                        text: "@Html.Raw( @ViewBag.Message)",
                                        icon: "warning",
                                        html: true,
                                        dangerMode: true
                                    })


                                //swal("@ViewBag.Message");
                            };
                    </script>
                }
            </form>
        </div>
    </div>
</div>








@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>



}
