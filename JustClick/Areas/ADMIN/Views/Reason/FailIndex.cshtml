
@using JustClick.Models.ViewModels;

@using JustClick.Infrastructure;

@model PaginatedList<FailModel>


@{
    ViewData["Title"] = "Fail Reason";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">

                <br />
                <div class="row">
                    <div class="col-6">
                        <h2 class="text-primary">Fail Reason List </h2>
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-primary color text-white" asp-area="ADMIN" asp-controller="Reason" asp-action="FailUpsert"><i class="fas fa-plus  "></i> Create Fail Reason  </a>
                    </div>
                </div>
            </div>
            <br />


            @if (@ViewBag.Message != null)

                @if (@ViewBag.Message == "Success")
                {
                    <div class="col-6">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <span class="alert-inner--icon"><i class="ni ni-like-2"></i></span>
                            <span class="alert-inner--text"><strong>Success!</strong> เพิ่ม/แก้ไข/ลบ ข้อมูลเรียบร้อยแล้ว </span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-6">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span class="alert-inner--icon"><i class="ni ni-like-2"></i></span>
                            <span class="alert-inner--text"><strong>Error!</strong> ไม่สามารถลบข้อมูลได้ </span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                }






            <div class="p-4 border rounded">

                <table id="tblData" class="table align-items-center table-flush" style="width:100%">
                    <thead class="thead-light">
                        <tr class="table-info">

                            <th>Project Code</th>
                            <th>Callback Reason</th>
                            <th>Need Terminate</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.PROJECT_CODE</td>
                                <td scope="row">@item.FAILREASON</td>
                                <td scope="row">@item.NEEDTERMINATE</td>


                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-sm dropdown-menu-arrow">
                                            <a asp-area="ADMIN" asp-controller="Reason" asp-action="FailUpsert" asp-route-id="@item.FAILCODE" class="dropdown-item">Edit</a>

                                            <a onclick=Delete(@item.FAILCODE) class="dropdown-item">Delete</a>



                                        </div>
                                    </div>
                                </td>







                            </tr>

                        }




                    </tbody>

                </table>



                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }


                <div>

                    @if (Model.Count > 0)
                    {

                        <nav aria-label="Page navigation example">
                            <ul class="pagination">

                                <li class="page-item">
                                    <a class="page-link @prevDisabled"
                                       asp-action="FailIndex"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-currentFilter="@ViewData[" CurrentFilter"]">
                                        <i class="fa fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>

                                </li>
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="FailIndex"
                                           asp-route-currentFilter="@ViewData[" CurrentFilter"]"
                                           asp-route-pageNumber="@i">
                                            @i

                                        </a>

                                    </li>
                                }

                                <li class="page-item">

                                    <a class="page-link @nextDisabled"
                                       asp-action="FailIndex"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-currentFilter="@ViewData[" CurrentFilter"]">
                                        <i class="fa fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>



                                </li>

                            </ul>
                        </nav>
                    }
                </div>


            </div>




        </div>
    </div>
</div>


@section Scripts

{


    <script>


        function Delete(id) {
            swal({
                title: "Are you sure you want to Delete?",
                text: "You will not be able to restore the data!",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: "/Admin/Reason/FailDelete/" + id,
                        success: function (data) {
                            if (data.success) {
                                window.location.reload();
                            }
                            else {

                            }
                        }
                    });
                }
            });
        }
        ;





    </script>




}

