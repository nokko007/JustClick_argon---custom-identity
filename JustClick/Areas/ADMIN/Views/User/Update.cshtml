

@model JustClick.Models.Identity.ApplicationUser

@{

    //Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Users";
}




<div class="row">
    <div class="col">
        <div class="card shadow">
            <form method="post">

                @*<div class="row p-3 border">*@
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                @if (Model.Id != "")
                {
                    title = "Edit User's Info";
                    <input type="hidden" asp-for="Id" />
                }
                <div class="card-header border-0">
                    <br />
                    <div class="row">
                        <div class="col-12 border-bottom">
                            <h2 class="text-primary">@title</h2>
                        </div>
                    </div>
                </div>
                <div class="col-8 pt-4">



                    <div class="form-group row">
                        <div class="col-4" style="text-align:right">
                            <label asp-for="UserName"></label>
                        </div>

                        <div class="col-8">

                            @if (Model.Id != "")
                            {
                                <input asp-for="UserName" class=" form-control" readonly />
                            }
                            else
                            {
                                <input asp-for="UserName" class=" form-control"  />
                            }


                            <span asp-validation-for="UserName" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4" style="text-align:right">
                            <label asp-for="TITLE_THAI"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="TITLE_THAI" class=" form-control" />
                            <span asp-validation-for="TITLE_THAI" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4" style="text-align:right">
                            <label asp-for="FNAME_THAI"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="FNAME_THAI" class=" form-control" />
                            <span asp-validation-for="FNAME_THAI" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4" style="text-align:right">
                            <label asp-for="LNAME_THAI"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="LNAME_THAI" class=" form-control" />
                            <span asp-validation-for="LNAME_THAI" class="invalid-feedback" style="display: block"></span>
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            @if (Model.Id != "")
                            {


                                <partial name="_EditAndBackToListButtonRole" model="Model.Id" />
                            }
                            else
                            {
                                <partial name="_CreateAndBackToListButton" />
                            }
                        </div>
                    </div>
                </div>
                @*</div>*@



                @if (@ViewBag.Message != null)
                {
                    <script type="text/javascript">

                        window.onload = function () {

                                    swal({
                                        title: "Warning",
                                        text: "@Html.Raw( @ViewBag.Message)",
                                        icon: "warning",
                                        html: true,
                                        dangerMode: true
                                    })


                                //swal("@ViewBag.Message");
                            };
                    </script>
                }
            </form>
        </div>
    </div>
</div>








@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>



}
