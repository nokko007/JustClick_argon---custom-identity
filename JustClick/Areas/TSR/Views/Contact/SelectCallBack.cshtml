
@using JustClick.Models.ViewModels;

@using JustClick.Infrastructure;

@model PaginatedList<ContactVM>

@{
 ViewData["Title"] = "Select Call Back";

}
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header border-0">

                    <br />
                    <div class="row">
                        <div class="col-6">
                            <h2 class="text-primary"> Select Call Back </h2>
                        </div>
                   
                    </div>

                    <br />

                    <form asp-action="SelectCallBack" method="get">
                        <div class="row">

                            <div class="col">
                                <p>
                                    ค้นหา : <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                                    <input type="submit" value="Search" class="btn btn-default" /> |
                                    <a asp-action="SelectCallBack">Back to Full List</a>
                                </p>
                            </div>
                        </div>
                    </form>


                </div>




                    <div class="table-responsive">


                        <table class="table align-items-center">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">CUSTID</th>
                                    <th scope="col">NAME</th>
                                    <th scope="col">SURNAME</th>
                                    <th scope="col">ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td scope="row">  @item.CUSTID</td>
                                        <td scope="row">@item.THAI_NAME</td>
                                        <td scope="row">@item.THAI_SURNAME</td>
                                        <td scope="row">
                                            <a asp-action="Callto" ID="Callto" asp-route-id=" @item.CUSTID" class="badge badge-success">Call to</a>
                                        </td>


                                    </tr>

                                }




                            </tbody>
                        </table>


                        @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                        }


                    <div>

                        @if (Model.Count > 0)
                        {

                            <nav aria-label="Page navigation example">
                                <ul class="pagination">

                                    <li class="page-item">
                                        <a class="page-link @prevDisabled"
                                           asp-action="SelectCallBack"
                                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                            <i class="fa fa-angle-left"></i>
                                            <span class="sr-only">Previous</span>
                                        </a>

                                    </li>
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-action="SelectCallBack"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-pageNumber="@i">
                                                @i

                                            </a>

                                        </li>
                                    }

                                    <li class="page-item">

                                        <a class="page-link @nextDisabled"
                                           asp-action="SelectCallBack"
                                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                            <i class="fa fa-angle-right"></i>
                                            <span class="sr-only">Next</span>
                                        </a>



                                    </li>

                                </ul>
                            </nav>
                        }
                        </div>


                    </div>
                </div>
        </div>
    </div>

@section Scripts{


}

